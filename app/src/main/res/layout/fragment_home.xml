<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/ar_drawing"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Main Action Buttons -->
    <View
        android:id="@+id/btn_library"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:background="#E671D9"
        app:layout_constraintEnd_toStartOf="@id/btn_camera"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title" />

    <View
        android:id="@+id/btn_camera"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="#7179E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_library"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title" />

    <!-- Recent Drawings Section -->
    <TextView
        android:id="@+id/tv_recent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/recent_drawings"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_library" />

    <TextView
        android:id="@+id/tv_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="@string/watch_all"
        android:textColor="#9C27B0"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_camera" />

    <!-- Recent Images Grid -->
    <View
        android:id="@+id/iv_recent1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_title" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/recentListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="@id/iv_recent1"
        app:layout_constraintEnd_toEndOf="@id/iv_recent1"
        app:layout_constraintStart_toStartOf="@id/iv_recent1"
        app:layout_constraintTop_toTopOf="@id/iv_recent1" />

    <!-- Categories Section -->
    <TextView
        android:id="@+id/tv_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/category"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_recent1" />

    <View
        android:id="@+id/iv_category1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#3C9056"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_categories_title" />


</androidx.constraintlayout.widget.ConstraintLayout>