<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/btn_explore"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#D98BD2"
        app:layout_constraintBottom_toTopOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/btn_explore"
        app:layout_constraintStart_toStartOf="@id/btn_explore"
        app:layout_constraintEnd_toEndOf="@id/btn_explore"
        app:layout_constraintBottom_toBottomOf="@id/btn_explore"/>

    <View
        android:id="@+id/btn_home"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#D98BD2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_explore"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/btn_home"
        app:layout_constraintStart_toStartOf="@id/btn_home"
        app:layout_constraintEnd_toEndOf="@id/btn_home"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"/>

</androidx.constraintlayout.widget.ConstraintLayout>